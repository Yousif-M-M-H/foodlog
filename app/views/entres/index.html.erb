

<div class="columns is-centered mt-6">
  <% @entres.each do |entre| %>
  <div class="column is-one-quarter">
  <div class="card">
  <header class="card-header">
  <p class="card-header-title">
  <%= entre.meal_type%>
  </p>
  </header>

  <div class="card-content">
  <div class="content">
    <p><span class="has-text-weight-bold"><%= entre.calories%></span> calories</p>
    <p><span class="has-text-weight-bold"><%= entre.protiens%></span> protiens</p>
    <p><span class="has-text-weight-bold"><%= entre.carbohydrates%></span> grams of carbohydrates</p>
    <p><span class="has-text-weight-bold"><%= entre.fats%></span> grams of fats</p>
    <p class="italic">Logged <%= time_ago_in_words(entre.created_at)%> ago</p>
  </div>
  </div>
  <div class="card-footer">
    <p><%= link_to "Show", entre, class: "card-footer-item" %></p>
    <p><%= link_to "Edit", edit_entre_path(entre), class: "card-footer-item" %></p>
    <p><%= link_to "Destroy", entre, method: :delete, data:{ confirm:'are you sure? '}, class: "card-footer-item" %></p>
  </div>
  </div>
  </div>
  <% end %>
</div>

<div class="columns is-centered mt-6">
<%= link_to "View all entries", archive_index_path, class: "button is-link is-outlined is-centered"%>
</div>